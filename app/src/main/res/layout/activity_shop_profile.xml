<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey"
    tools:context=".ShopProfileActivity">
    <RelativeLayout
        android:id="@+id/pageHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="#FFF"
        android:elevation="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/store_profile"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pageBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pageHeader"
        >
        <RelativeLayout
            android:id="@+id/shopTitle"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/shopImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:maxWidth="160dp"
                android:maxHeight="160dp"
                android:padding="5dp"
                android:src="@drawable/oh_no" />

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flying Salmon"
                android:layout_toRightOf="@id/shopImage"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/shopFollowers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeName"
                android:text="Followers: 9k"
                android:layout_toRightOf="@id/shopImage"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shopProperties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_below="@id/shopTitle"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                >
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txtRate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_star_border_24"
                    android:text="Rate"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/rateNumber"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtRate"
                    android:text="4.7/5 (1.9k reviews)"
                    android:textColor="@color/dark_blue"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/responseRate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rate"
                >
                <TextView
                    android:id="@+id/txtResponseRate"
                    android:layout_centerVertical="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_chat_24"
                    android:text="Response rate"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/responceRateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/txtResponseRate"
                    android:text="99%"
                    android:textColor="@color/dark_blue"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/products"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/responseRate"
                >
                <TextView
                    android:id="@+id/txtProducts"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_baseline_all_inbox_24"
                    android:text="Products"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/productsNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/txtProducts"
                    android:text="82"
                    android:textColor="@color/dark_blue"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/establish"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/products"
                >
                <TextView
                    android:id="@+id/txtEstablish"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:text="Establish since"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/establishYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/txtEstablish"
                    android:text="4 years ago"
                    android:textColor="@color/dark_blue"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shopLink"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/shopProperties"
            android:background="#FFF"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/txtLink"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
                android:text="Shop address" />

            <TextView
                android:id="@+id/shopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txtLink"
                android:text="@string/no_address"
                android:textColor="@color/dark_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopLink">

            <Button
                android:id="@+id/showAllProducts"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Show all product" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/nav_button"/>

    </RelativeLayout>
</RelativeLayout>